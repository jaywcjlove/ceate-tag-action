{
  "name": "create-tag-action",
  "version": "1.1.7",
  "private": true,
  "description": "Auto create tags from commit or package.json.",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build src/main.ts",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jaywcjlove/create-tag-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Kenny Wong",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.4",
    "@actions/github": "^4.0.0",
    "semver": "7.3.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run package && git add dist/"
    }
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.20",
    "@types/semver": "^7.3.4",
    "@typescript-eslint/parser": "^4.8.1",
    "@vercel/ncc": "0.26.2",
    "husky": "5.0.9",
    "eslint": "^7.17.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "prettier": "2.2.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.2"
  }
}
