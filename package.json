{
  "name": "create-tag-action",
  "version": "1.2.0",
  "private": true,
  "description": "Auto create tags from commit or package.json.",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build src/main.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jaywcjlove/create-tag-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Kenny Wong",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.4.0",
    "@actions/exec": "^1.1.0",
    "@actions/github": "^5.0.0",
    "fs-extra": "10.0.0",
    "semver": "7.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run package && git add dist/"
    }
  },
  "devDependencies": {
    "@types/fs-extra": "9.0.11",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.2",
    "@types/semver": "^7.3.6",
    "@vercel/ncc": "0.28.6",
    "husky": "6.0.0",
    "eslint": "^7.28.0",
    "eslint-plugin-github": "^4.1.3",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^27.0.4",
    "jest-circus": "^27.0.4",
    "prettier": "2.3.2",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.2"
  }
}
